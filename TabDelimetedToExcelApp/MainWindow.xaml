<Window x:Class="TabDelimetedToExcelApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TabDelimetedToExcelApp"
        mc:Ignorable="d"
        Title="Tab Delimited To Excel 1.0" Height="350" Width="525">
    <Grid>
        <Button x:Name="open" Content="Open file..." HorizontalAlignment="Left" Margin="27,24,0,0" VerticalAlignment="Top" Width="93" Click="open_Click" Height="35"/>
        <Button x:Name="transform" Content="Transform" HorizontalAlignment="Left" Margin="27,76,0,0" VerticalAlignment="Top" Width="93" Click="transform_Click" IsEnabled="False" Height="35"/>
        <Label x:Name="label" Content="Your file:" HorizontalAlignment="Left" Margin="135,29,0,0" VerticalAlignment="Top" Height="26"/>
        <Label x:Name="label_Copy" Content="Ready!" HorizontalAlignment="Left" Margin="125,62,0,0" VerticalAlignment="Top" Height="37" Visibility="Hidden"/>
        <TextBox x:Name="fileTextBox" HorizontalAlignment="Left" Height="26" Margin="195,31,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="294" TextChanged="fileTextBox_TextChanged"/>

    </Grid>
</Window>
